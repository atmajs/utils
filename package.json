{
    "name": "atma-utils",
    "description": "Helpers",
    "version": "0.2.49",
    "author": "Alexander Kit <alex.kit@atmajs.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/atmajs/utils.git"
    },
    "bugs": {
        "url": "https://github.com/atmajs/utils/issues"
    },
    "licenses": [
        "MIT"
    ],
    "main": "lib/utils.js",
    "types": "./lib/utils.d.ts",
    "devDependencies": {
        "app-bundler": "^0.0.94",
        "atma": "^0.12.28",
        "atma-io": "^1.2.37",
        "atma-loader-babel": ">0.0.0",
        "atma-loader-ts": "^1.1.12",
        "dts-bundle": "^0.7.3"
    },
    "scripts": {
        "test": "atma test",
        "build": "app-bundler && npm run dts",
        "dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
        "release": "echo \"Run atma pub -m \"message\"\""
    },
    "keywords": [],
    "app-bundler": {
        "apps": {
            "embed": {
                "file": "src/export-all.ts",
                "outputMain": "lib/utils.embed.js",
                "package": {
                    "moduleWrapper": "script"
                }
            },
            "lib": {
                "file": "src/export-lib.ts",
                "outputMain": "lib/utils.js",
                "package": {
                    "moduleWrapper": "custom",
                    "moduleWrapperCustomPath": "./src/umd/head.js"
                }
            }
        },
        "common": {
            "package": {
                "module": "import"
            },
            "extensions": {
                "io": {
                    "type": "js"
                }
            },
            "defaultExtensions": {
                "js": "ts"
            },
            "middlewares": {
                "ts": [
                    "atma-loader-ts:read"
                ]
            }
        }
    },
    "atma": {
        "plugins": [
            "atma-loader-ts",
            "atma-io-middleware-importer"
        ],
        "settings": {
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "atma-loader-ts": {
                "extensions": [
                    "ts",
                    "test"
                ],
                "typescript": {
                    "sourceMap": false,
                    "compilerOptions": {
                        "sourceMap": false,
                        "#if (TEST)": {
                            "module": "AMD"
                        },
                        "#if (!TEST)": {
                            "module": "esnext"
                        }
                    }
                }
            },
            "atma-io-middleware-importer": {}
        }
    }
}
