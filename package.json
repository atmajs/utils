{
    "name": "atma-utils",
    "description": "Helpers",
    "version": "0.2.66",
    "author": "Alex Kit <alex.kit@atmajs.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/atmajs/utils.git"
    },
    "bugs": {
        "url": "https://github.com/atmajs/utils/issues"
    },
    "licenses": [
        "MIT"
    ],
    "main": "lib/umd/utils.js",
    "types": "./lib/utils.d.ts",
    "exports": {
        ".": {
            "import": "./lib/esm/utils.mjs",
            "types": "./lib/utils.d.ts",
            "require": "./lib/umd/utils.js"
        }
    },
    "devDependencies": {
        "@types/node": "^17.0.8",
        "app-bundler": "^0.2.8",
        "atma": "^0.12.33",
        "atma-io": "^1.2.37",
        "atma-loader-babel": ">0.0.0",
        "atma-loader-ts": "^1.1.16",
        "dts-bundle": "^0.7.3"
    },
    "scripts": {
        "test": "atma test",
        "build": "app-bundler && npm run dts",
        "dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
        "release": "echo \"Run atma pub -m \"message\"\""
    },
    "keywords": [],
    "app-bundler": {
        "apps": {
            "embed": {
                "file": "src/export-all.ts",
                "outputMain": "lib/utils.embed.js",
                "package": {
                    "moduleWrapper": "script"
                }
            },
            "umd": {
                "file": "src/export-lib.ts",
                "outputMain": "lib/umd/utils.js",
                "package": {
                    "module": "commonjs",
                    "moduleName": "Utils",
                    "moduleWrapper": "umd",
                    "commonjs": {
                        "output": "simplified"
                    }
                }
            },
            "esm": {
                "file": "src/export-lib.ts",
                "outputMain": "lib/esm/utils.mjs",
                "package": {
                    "module": "commonjs",
                    "moduleWrapper": "esm",
                    "commonjs": {
                        "output": "simplified"
                    }
                }
            }
        },
        "common": {
            "package": {
                "module": "import"
            },
            "extensions": {
                "io": {
                    "type": "js"
                }
            },
            "defaultExtensions": {
                "js": "ts"
            },
            "middlewares": {
                "ts": [
                    "atma-loader-ts:read"
                ]
            },
            "settings": {
                "atma-loader-ts": {
                    "typescript": {
                        "compilerOptions": {
                            "module": "CommonJS"
                        }
                    }
                }
            }
        }
    },
    "atma": {
        "plugins": [
            "atma-loader-ts",
            "atma-io-middleware-importer"
        ],
        "settings": {
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "atma-loader-ts": {
                "extensions": [
                    "ts",
                    "test"
                ],
                "typescript": {
                    "sourceMap": false,
                    "compilerOptions": {
                        "sourceMap": false,
                        "#if (TEST)": {
                            "module": "AMD"
                        },
                        "#if (!TEST)": {
                            "module": "esnext"
                        }
                    }
                }
            },
            "atma-io-middleware-importer": {}
        }
    }
}
